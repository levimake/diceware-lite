<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#e1f5fe">

    <TextView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:text="1"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/counter_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rogue"
        android:id="@+id/dicephrase_textview"
        android:layout_toRightOf="@id/counter_textview"
        android:layout_toEndOf="@id/counter_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45321"
        android:id="@+id/diceseq_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/close_button_green"
        android:id="@+id/close_button"
        android:layout_toLeftOf="@id/diceseq_textview"
        android:layout_toStartOf="@id/diceseq_textview"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/remove_password_button"/>


</RelativeLayout>